{
  "server": {
    "port": 3000,
    "host": "0.0.0.0"
  },
  "inference": {
    "mode": "wasm",
    "inputSize": {
      "width": 320,
      "height": 240
    },
    "targetFps": 15,
    "maxQueueSize": 5,
    "scoreThreshold": 0.5,
    "nmsThreshold": 0.4
  },
  "webrtc": {
    "iceServers": [
      {
        "urls": "stun:stun.l.google.com:19302"
      }
    ],
    "sdpSemantics": "unified-plan"
  },
  "metrics": {
    "enabled": true,
    "windowSize": 30,
    "reportInterval": 1000
  },
  "logging": {
    "level": "info",
    "format": "combined"
  }
}
